{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/hello",
      "dest": "/api/hello.js"
    },
    {
      "src": "/",
      "dest": "/api/hello.js"
    }
  ],
  "buildCommand": "echo 'API only build - no frontend'",
  "outputDirectory": "api"
}
